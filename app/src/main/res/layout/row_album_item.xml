<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemAlbum"
    android:layout_width="145dp"
    android:layout_height="185dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/itemAlbum_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/itemAlbum_imgCover"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:scaleType="fitXY"
            android:src="@drawable/rihanna"/>

        <TextView
            android:id="@+id/itemAlbum_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="Nome do Album"
            android:textColor="@color/colorGrainDark"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/itemAlbum_imgCover"
            android:layout_alignParentBottom="true"/>



    </RelativeLayout>
</androidx.cardview.widget.CardView>